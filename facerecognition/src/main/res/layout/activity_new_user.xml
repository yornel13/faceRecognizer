<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewUserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:id="@+id/scrollView">

        <LinearLayout
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/universidad_agraria"
                    android:id="@+id/image1"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:src="@drawable/universidad_agraria"
                    android:id="@+id/image2"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:src="@drawable/universidad_agraria"
                    android:id="@+id/image3"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:src="@drawable/universidad_agraria"
                    android:id="@+id/image4"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:src="@drawable/universidad_agraria"
                    android:id="@+id/image5"
                    android:adjustViewBounds="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:id="@+id/input_layout_nombre"
                android:textColorHint="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:nextFocusDown="@+id/input_apellido"
                    android:focusable="true"
                    android:imeOptions="actionNext"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/input_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:id="@+id/input_layout_apellido"
                android:textColorHint="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:nextFocusDown="@+id/input_color"
                    android:focusable="true"
                    android:imeOptions="actionNext"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/input_apellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellido" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:id="@+id/input_layout_edad"
                android:textColorHint="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:nextFocusDown="@+id/input_color"
                    android:focusable="true"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/input_edad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Edad" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:id="@+id/input_layout_color"
                android:textColorHint="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:nextFocusDown="@+id/input_amigo"
                    android:focusable="true"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/input_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Color Favorito" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:id="@+id/input_layout_amigo"
                android:textColorHint="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:focusable="true"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/input_fecha"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/input_amigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mejor Amigo" />


            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:clickable="false"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:id="@+id/input_layout_fecha"
                    android:textColorHint="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:clickable="false"
                        android:editable="false"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/input_fecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Fecha de Nacimiento" />

                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:id="@+id/container_fecha"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <Button
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="Guardar"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/button" />

</RelativeLayout>
