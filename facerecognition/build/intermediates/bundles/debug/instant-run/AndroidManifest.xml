<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.opencv.javacv.facerecognition"
    android:installLocation="auto"
    android:versionCode="22"
    android:versionName="2.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:icon="@drawable/face"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="face" />

        <activity
            android:name="org.opencv.javacv.facerecognition.FdActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name="org.opencv.javacv.facerecognition.ImageGallery"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.opencv.javacv.facerecognition.MainActivity"
            android:label="Principal" />
        <activity
            android:name="org.opencv.javacv.facerecognition.SplashActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.opencv.javacv.facerecognition.TrainFaceTrackerActivity"
            android:label="Face Tracker"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="org.opencv.javacv.facerecognition.AddFaceTrackerActivity"
            android:label="Face Tracker"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="org.opencv.javacv.facerecognition.RecognizerFaceTrackerActivity"
            android:label="Face Tracker"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="org.opencv.javacv.facerecognition.NuevoUsuarioActivity"
            android:label="Formulario" />
        <activity
            android:name="org.opencv.javacv.facerecognition.EditarUsuarioActivity"
            android:label="Editar Usuario" />
        <activity
            android:name="org.opencv.javacv.facerecognition.UsuarioDetectadoActivity"
            android:label="Usuario"
            android:theme="@style/AppTheme" />
        <activity
            android:name="org.opencv.javacv.facerecognition.chat.HelloBubblesActivity"
            android:label="Chat"
            android:theme="@style/AppTheme" />
        <activity
            android:name="org.opencv.javacv.facerecognition.OpcionesActivity"
            android:label="Opciones" />
        <activity
            android:name="org.opencv.javacv.facerecognition.UsuariosActivity"
            android:label="Usuarios" />
        <activity
            android:name="org.opencv.javacv.facerecognition.PermisosActivity"
            android:label="Permisos" >
        </activity>
    </application>

</manifest>